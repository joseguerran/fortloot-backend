# Database
#DATABASE_URL=
DATABASE_URL=

# Redis (for BullMQ)
REDIS_HOST=
REDIS_PORT=
REDIS_PASSWORD=

# API Server
PORT=
NODE_ENV=

# Encryption (CRITICAL - Generate with: openssl rand -hex 32)
# This MUST be 64 hex characters (32 bytes) for AES-256
ENCRYPTION_KEY=

# Bot Configuration
BOT_POOL_SIZE=
BOT_CHECK_INTERVAL=
BOT_RESTART_DELAY=

# Gift Limitations (Epic Games restrictions)
MAX_GIFTS_PER_DAY=
FRIENDSHIP_WAIT_HOURS=

# Queue Configuration
QUEUE_CONCURRENCY=
QUEUE_MAX_RETRIES=
QUEUE_RETRY_DELAY=

# Monitoring & Logging
LOG_LEVEL=
LOG_DIR=

# Fortnite API (for shop sync)

# Order Configuration
# Payment upload timeout in minutes (time allowed for customer to upload payment proof)
PAYMENT_UPLOAD_TIMEOUT_MINUTES=

# Security - Rate Limiting (effectively disabled for internal use)
RATE_LIMIT_WINDOW_MS=
RATE_LIMIT_MAX_REQUESTS=

# WhatsApp Notifications (WAHA)
# WAHA API URL - see https://waha.devlike.pro/ for setup
WAHA_API_URL=http://localhost:3003
# WAHA API Key (if authentication is enabled)
WAHA_API_KEY=
# Admin phone number with country code (e.g., 5491112345678)
ADMIN_WHATSAPP=

# Email Notifications (Resend)
# Get your API key at https://resend.com
RESEND_API_KEY=
# Custom from email (must be verified in Resend dashboard)
RESEND_FROM_EMAIL=FortLoot <noreply@fortloot.com>
# Admin email for payment notifications
ADMIN_EMAIL=
# Frontend URL for email links
FRONTEND_URL=http://localhost:3000
# Admin panel URL for email links
ADMIN_PANEL_URL=http://localhost:3002

# Cryptomus (Crypto Payments)
# Get your credentials at https://cryptomus.com
CRYPTOMUS_MERCHANT_ID=
CRYPTOMUS_API_KEY=
# Webhook URL where Cryptomus will send payment notifications
# In production: https://api.fortloot.com/api/webhooks/cryptomus
CRYPTOMUS_WEBHOOK_URL=http://localhost:3001/api/webhooks/cryptomus
